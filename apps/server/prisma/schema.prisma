// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// USER & AUTHENTICATION
// ============================================

model User {
  id            String   @id @default(uuid())
  username      String   @unique
  email         String   @unique
  passwordHash  String   @map("password_hash")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")
  lastLoginAt   DateTime? @map("last_login_at")
  isActive      Boolean  @default(true) @map("is_active")
  
  // Relations
  characters    Character[]
  loginHistory  LoginHistory[]
  
  @@map("users")
}

model LoginHistory {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  ipAddress String?  @map("ip_address")
  userAgent String?  @map("user_agent")
  success   Boolean
  reason    String?
  createdAt DateTime @default(now()) @map("created_at")
  
  // Relations
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([createdAt])
  @@map("login_history")
}

// ============================================
// CHARACTERS
// ============================================

model Character {
  id          String   @id @default(uuid())
  userId      String   @map("user_id")
  name        String
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  
  // Position
  posX        Float    @default(1000) @map("pos_x")
  posY        Float    @default(1000) @map("pos_y")
  roomId      String   @default("main") @map("room_id")
  
  // Stats
  level       Int      @default(1)
  xp          Int      @default(0)
  health      Int      @default(100)
  maxHealth   Int      @default(100) @map("max_health")
  
  // Economy
  money       Int      @default(0)
  
  // Relations
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  inventory   InventoryItem[]
  
  @@unique([userId, name])
  @@index([userId])
  @@map("characters")
}

// ============================================
// INVENTORY & ITEMS
// ============================================

model Item {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?
  type        ItemType
  rarity      Rarity   @default(COMMON)
  iconUrl     String?  @map("icon_url")
  maxStack    Int      @default(1) @map("max_stack")
  isUsable    Boolean  @default(false) @map("is_usable")
  effectData  Json?    @map("effect_data") // Store item effects as JSON
  createdAt   DateTime @default(now()) @map("created_at")
  
  // Relations
  inventoryItems InventoryItem[]
  
  @@map("items")
}

model InventoryItem {
  id          String   @id @default(uuid())
  characterId String   @map("character_id")
  itemId      String   @map("item_id")
  quantity    Int      @default(1)
  equipped    Boolean  @default(false)
  slot        Int?     // Equipment slot if equipped
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  
  // Relations
  character   Character @relation(fields: [characterId], references: [id], onDelete: Cascade)
  item        Item      @relation(fields: [itemId], references: [id], onDelete: Cascade)
  
  @@unique([characterId, itemId, slot])
  @@index([characterId])
  @@index([itemId])
  @@map("inventory_items")
}

// ============================================
// ENUMS
// ============================================

enum ItemType {
  CONSUMABLE
  EQUIPMENT
  MATERIAL
  QUEST
  CURRENCY
  
  @@map("item_type")
}

enum Rarity {
  COMMON
  UNCOMMON
  RARE
  EPIC
  LEGENDARY
  MYTHIC
  
  @@map("rarity")
}

// ============================================
// GAME CONFIGURATION
// ============================================

model GameConfig {
  id          String   @id @default(uuid())
  key         String   @unique
  value       Json
  description String?
  updatedAt   DateTime @updatedAt @map("updated_at")
  
  @@map("game_config")
}
